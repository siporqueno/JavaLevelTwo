<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<BorderPane fx:controller="Lesson_4.Controller"
            xmlns:fx="http://javafx.com/fxml">
    <center>
        <TextArea fx:id="textArea" prefWidth="200" editable="false"/>
    </center>

    <bottom>
        <HBox>
            <TextField fx:id="textField" onAction="#onActionTextField" HBox.hgrow="ALWAYS"/>
            <Button fx:id="btnSend" text="Send" onAction="#onActionBtnSend" prefWidth="50"/>
        </HBox>
    </bottom>

</BorderPane>